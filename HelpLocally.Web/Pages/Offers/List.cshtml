@page
@using HelpLocally.Domain
@model HelpLocally.Web.Pages.Offers.ListModel
@{
    ViewData["Title"] = "My offers";
}

<h1 class="material-color-def">Offers List</h1>

<div class="tiles__table tiles__table--first table-responsive">
    <table class="table">
        <thead class="material-bg-surf">
            <tr>
                <th scope="col" class="material-color-surf">#</th>
                @*<th scope="col" class="material-color-surf">Id</th>*@
                <th scope="col" class="material-color-surf">Name</th>
                <th scope="col" class="material-color-surf">Description</th>
                <th scope="col" class="material-color-surf">Offer Type</th>
                <th scope="col" class="material-color-surf">Price</th>
                <th scope="col" class="material-color-surf">Actions</th>
            </tr>
        </thead>
        <tbody class="material-bg-surf-2">
            @{ int i = 1; }
            @foreach (var user in Model.Offers)
            {
                string type;
                Model.Types.TryGetValue(user.OfferTypeId, out type);
                <tr>
                    <th scope="col" class="material-color-surf">@i</th>
                    @*<th scope="col" class="material-color-surf">@user.Id</th>*@
                    <th scope="col" class="material-color-surf">@user.Name</th>
                    <th scope="col" class="material-color-surf">@user.Description</th>
                    @*<th scope="col" class="material-color-surf">@user.OfferTypeId</th>*@
                    <th scope="col" class="material-color-surf">@type</th>
                    <th scope="col" class="material-color-surf">@user.Price</th>
                    <th scope="col" class="material-color-surf">
                        <a asp-route-Id="@user.Id" asp-page="/Offers/Edit" class="btn btn-primary">Edit</a>
                        <a asp-route-Id="@user.Id" asp-page="/Offers/Delete" class="btn btn-primary">Delete</a>
                    </th>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>
